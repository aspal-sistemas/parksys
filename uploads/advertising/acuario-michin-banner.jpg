<svg width="800" height="150" viewBox="0 0 800 150" xmlns="http://www.w3.org/2000/svg">
  <!-- Fondo degradado oceánico -->
  <defs>
    <linearGradient id="oceanGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#0074D9;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#39CCCC;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="waterGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#7FDBFF;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#0074D9;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Fondo principal -->
  <rect width="800" height="150" fill="url(#oceanGradient)"/>
  <rect width="800" height="150" fill="url(#waterGlow)"/>
  
  <!-- Elementos decorativos marinos -->
  <circle cx="100" cy="30" r="15" fill="#FFFFFF" opacity="0.6"/>
  <circle cx="700" cy="120" r="20" fill="#7FDBFF" opacity="0.4"/>
  <circle cx="650" cy="40" r="12" fill="#FFFFFF" opacity="0.3"/>
  
  <!-- Ondas de agua -->
  <path d="M50 50 Q80 30 110 50 Q140 70 170 50" stroke="#7FDBFF" stroke-width="4" fill="none" opacity="0.7"/>
  
  <!-- Logotipo ACUARIO MICHÍN -->
  <text x="150" y="50" font-family="Arial Black, sans-serif" font-size="32" font-weight="900" fill="#FFFFFF" stroke="#001f3f" stroke-width="1">
    ACUARIO
  </text>
  <text x="350" y="50" font-family="Arial Black, sans-serif" font-size="36" font-weight="900" fill="#FF851B" stroke="#001f3f" stroke-width="1">
    MICHÍN
  </text>
  
  <!-- Slogan promocional -->
  <text x="150" y="75" font-family="Arial, sans-serif" font-size="16" font-weight="600" fill="#FFDC00" opacity="0.9">
    DESDE $99 PESOS - PROMOCIÓN VERANO
  </text>
  
  <!-- Pez estilizado -->
  <g transform="translate(600, 25)">
    <!-- Cuerpo del pez -->
    <ellipse cx="20" cy="50" rx="25" ry="15" fill="#FF851B" opacity="0.9"/>
    <ellipse cx="15" cy="50" rx="18" ry="10" fill="#FFDC00"/>
    <!-- Cola -->
    <path d="M45 50 L65 35 L65 65 Z" fill="#FF851B"/>
    <!-- Ojo -->
    <circle cx="10" cy="45" r="4" fill="#FFFFFF"/>
    <circle cx="10" cy="45" r="2" fill="#001f3f"/>
    <!-- Aletas -->
    <path d="M20 35 Q15 25 25 30" stroke="#FF851B" stroke-width="3" fill="none"/>
    <path d="M20 65 Q15 75 25 70" stroke="#FF851B" stroke-width="3" fill="none"/>
  </g>
  
  <!-- Información adicional -->
  <text x="150" y="100" font-family="Arial, sans-serif" font-size="12" font-weight="500" fill="#FFFFFF">
    🐠 +10,000 especies marinas • 📍 Centro Guadalajara
  </text>
  
  <!-- CTA -->
  <text x="150" y="125" font-family="Arial, sans-serif" font-size="14" font-weight="600" fill="#FFFFFF">
    ¡Descubre un mundo submarino único! 🎂 Cumpleañeros GRATIS
  </text>
</svg>
